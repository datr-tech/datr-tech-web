{
  "name": "@datr-tech/datr-tech-web",
  "description": "datr.tech public website",
  "version": "0.2.0",
  "private": false,
  "homepage": "https://github.com/datr-tech",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/datr-tech/datr-tech-web"
  },
  "keywords": [
    "@datr.tech",
    "public",
    "react",
    "redux",
    "typescript",
    "website"
  ],
  "license": "MIT",
  "author": "admin <admin@datr.tech>",
  "main": "./dist/index.js",
  "engines": {
    "node": ">=20.0.9",
    "npm": ">=10.1.0"
  },
  "scripts": {
    "build": "webpack",
    "changelog": "npx auto-changelog",
    "changelog:add": "git add ./CHANGELOG.md",
    "changelog:commit": "git commit -m 'ci: update changelog' --no-verify",
    "clean": "npx rimraf ./coverage/* ./dist/*",
    "commit-msg": "commitlint --edit",
    "deploy": "gh-pages -d build",
    "dev": "webpack serve",
    "format": "npm-run-all format:config format:src",
    "format:config": "npx prettier --write './*.{cjs,js,json,mjs,ts}'",
    "format:src": "npx prettier --write './src/**/*.{json,ts,tsx}'",
    "format:test": "npx prettier --write './test/**/*.{json,ts,tsx}'",
    "lint": "npx eslint",
    "lint:fix": "npm run lint -- --fix",
    "postchangelog": "npm-run-all changelog:add changelog:commit",
    "postversion": "git push origin master --tags --no-verify",
    "prebuild": "npm run clean",
    "prechangelog": "git add ./package.json",
    "precommit": "npm-run-all format lint spell",
    "predeploy": "npm run build",
    "prepare": "husky",
    "prepush": "npm run lint",
    "preversion": "npm-run-all format lint spell",
    "spell": "npx cspell .",
    "test": "npm run test:unit",
    "test:it": "npx jest -c ./jest.config.integration.json ./test/integration",
    "test:unit": "npx jest --runInBand --detectOpenHandles -c ./jest.config.unit.json ./test/unit --coverage",
    "version": "npm-run-all build changelog"
  },
  "dependencies": {
    "@coreui/coreui": "^5.3.2",
    "@coreui/react": "^5.6.0",
    "react": "^19.1.0",
    "react-dom": "^19.1.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@eslint/compat": "^1.2.9",
    "@eslint/eslintrc": "^3.3.1",
    "@eslint/js": "^9.26.0",
    "@types/copy-webpack-plugin": "^10.1.3",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.15.17",
    "@types/react": "^19.1.3",
    "@types/react-dom": "^19.1.3",
    "auto-changelog": "^2.5.0",
    "copy-webpack-plugin": "^13.0.0",
    "cspell": "^9.0.1",
    "css-loader": "^7.1.2",
    "eslint": "^9.26.0",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-prettier": "^5.4.0",
    "gh-pages": "^6.3.0",
    "husky": "^9.1.7",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.5.3",
    "prettier-plugin-organize-imports": "^4.1.0",
    "prettier-plugin-sort-json": "^4.1.1",
    "rimraf": "^6.0.1",
    "style-loader": "^4.0.0",
    "ts-loader": "^9.5.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.32.0",
    "webpack": "^5.99.8",
    "webpack-cli": "^6.0.1",
    "webpack-dev-server": "^5.2.1"
  }
}
