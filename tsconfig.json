{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "jsx": "react-jsx",
    "moduleResolution": "node",
    "outDir": "dist",
    "paths": {
      "@app-dtw/*": ["./src/*"],
      "@test-dtw/*": ["./test/*"]
    },
    "skipLibCheck": true,
    "strict": true,
    "target": "es6"
  },
  "exclude": [".git", ".github", "coverage", "dist", ".git", ".github", "node_modules"],
  "files": ["src/index.tsx"],
  "include": ["**/*.ts", "**/*.tsx"]
}
